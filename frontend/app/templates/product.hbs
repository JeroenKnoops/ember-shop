<div class="row">

  <div class="col-md-3">
    <p class="lead">Shop Name</p>
    <div class="list-group">
      <a href="#" class="list-group-item">Printable</a>
      <a href="#" class="list-group-item">Cupcake Wrappers</a>
      <a href="#" class="list-group-item">Authentic Dragon Bones</a>
    </div>
  </div>

  <div class="col-md-9">

    <div class="thumbnail">
      {{#if isEditing}}
        <div class="caption-full">
          <form role="form" {{action 'submit' on='submit'}}>
              <div {{bind-attr class=':form-group validationErrors.title:has-error'}}>
                <label for="title">Title</label>
                {{input value=title class='form-control' placeholder="Enter title" id='title' autofocus=true}}
                {{validationErrors.title}}
              </div>
            <div class="form-group">
              <label for="description">Description</label>
              {{textarea value=description class='form-control' placeholder="Enter description" id='description'}}
            </div>
            <div class="form-group">
              <label for="price">Price</label>
              {{input value=price class='form-control' type=number step='.01' placeholder="Enter price" id='price'}}
            </div>
            <div class="form-group">
              <label for="photo">File input</label>
              {{view 'upload-file' file=image}}
              {{#if image}}
                <img {{bind-attr src=image}} class="img-thumbnail"/>
              {{/if}}
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
            <div class="btn btn-default" {{action 'cancelEditing'}}>Cancel</div>
          </form>
        </div>
      {{else}}
        <img {{bind-attr src=image}} class="img-responsive"/>
        <div class="caption-full">
          <h4 class="pull-right">${{price}}</h4>
          <h4>{{title}}</h4>
          <p>{{description}}</p>
          <div class='btn btn-success' {{action 'startEditing'}}>Edit Me</div>
        </div>
      {{/if}}
      <div class="ratings">
        <p class="pull-right">{{numberOfReviews}} reviews</p>
        <p>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star-empty"></span>
        {{stars}} stars
        </p>
      </div>
    </div>

    <div class="well">

      <div class="text-right">
        <a class="btn btn-success">Leave a Review</a>
      </div>

      {{#each reviews}}
        <hr>

        <div class="row">
          <div class="col-md-12">
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star"></span>
            <span class="glyphicon glyphicon-star-empty"></span>
            {{user}}
            <span class="pull-right">{{createdAt}}</span>
            <p>{{description}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
