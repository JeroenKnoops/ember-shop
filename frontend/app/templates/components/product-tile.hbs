<div class="col-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <img {{bind-attr src=product.image}} alt="">
    <div class="caption">
      <h4 class="pull-right">{{product.price}}</h4>
      <h4>{{#link-to 'product' product}}{{product.title}}
        {{/link-to}}
      </h4>
      <p class='badge'>{{product.categoryName}}</p>
      <p>{{product.description}}</p>
    </div>
    <div class="ratings">
      <p class="pull-right">{{product.numberOfReviews}} reviews</p>
      <p>
      <p>{{product.stars}}</p>
      <span class="glyphicon glyphicon-star"></span>
      <span class="glyphicon glyphicon-star"></span>
      <span class="glyphicon glyphicon-star"></span>
      <span class="glyphicon glyphicon-star"></span>
      <span class="glyphicon glyphicon-star-empty"></span>
      </p>
    </div>
  </div>
</div>
